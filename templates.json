{
  "version": "3",
  "templates": [
    {
      "id": 1,
      "type": 1,
      "title": "Registry",
      "description": "Docker image registry",
      "categories": ["docker"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/registry.png",
      "image": "registry:latest",
      "env": [
        {
          "name": "OTEL_TRACES_EXPORTER",
          "default": "none",
          "preset": true
        }
      ],
      "ports": ["5000/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        },
        {
          "container": "/var/lib/registry"
        }
      ]
    },
    {
      "id": 2,
      "type": 1,
      "title": "PhpMyAdmin",
      "description": "A web interface for MySQL and MariaDB",
      "categories": ["management"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/phpmyadmin.png",
      "image": "phpmyadmin:latest",
      "env": [
        {
          "name": "PMA_HOSTS",
          "label": "Database Host",
          "default": "172.17.0.1"
        },
        {
          "name": "PMA_PORT",
          "label": "Database Port",
          "default": "3306"
        }
      ],
      "ports": ["80/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        }
      ]
    },
    {
      "id": 3,
      "type": 1,
      "title": "Redis Insight",
      "description": "Redis Insight - our best official GUI for Redis",
      "categories": ["management"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/redisinsight.png",
      "image": "redis/redisinsight:latest",
      "env": [
        {
          "name": "RI_REDIS_HOST",
          "label": "Redis Host",
          "default": "172.17.0.1"
        },
        {
          "name": "RI_REDIS_PORT",
          "label": "Redis Port",
          "default": "6379"
        },
        {
          "name": "RI_REDIS_USERNAME",
          "label": "Redis Username",
          "default": "default"
        },
        {
          "name": "RI_REDIS_PASSWORD",
          "label": "Redis Password",
          "default": ""
        }
      ],
      "ports": ["5540/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        }
      ]
    },
    {
      "id": 4,
      "type": 1,
      "title": "Nginx",
      "description": "High performance web server",
      "categories": ["webserver"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/nginx.png",
      "image": "nginx:latest",
      "ports": ["80/tcp", "443/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        },
        {
          "container": "/etc/nginx"
        },
        {
          "container": "/usr/share/nginx/html"
        }
      ]
    },
    {
      "id": 5,
      "type": 1,
      "title": "Httpd",
      "description": "Open-source HTTP server",
      "categories": ["webserver"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/httpd.png",
      "image": "httpd:latest",
      "ports": ["80/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        },
        {
          "container": "/usr/local/apache2/htdocs"
        }
      ]
    },
    {
      "id": 6,
      "type": 1,
      "title": "WordPress",
      "description": "The WordPress rich content management system can utilize plugins, widgets, and themes",
      "categories": ["cms"],
      "platform": "linux",
      "logo": "https://ngochangtf.github.io/portainer-templates/assets/wordpress.png",
      "image": "wordpress:latest",
      "env": [
        {
          "name": "WORDPRESS_DB_HOST",
          "label": "Database Host",
          "default": "172.17.0.1"
        },
        {
          "name": "WORDPRESS_DB_USER",
          "label": "Database User",
          "default": "root"
        },
        {
          "name": "WORDPRESS_DB_PASSWORD",
          "label": "Database Password",
          "default": ""
        },
        {
          "name": "WORDPRESS_TABLE_PREFIX",
          "label": "Table Prefix",
          "default": "wp_"
        }
      ],
      "ports": ["80/tcp"],
      "volumes": [
        {
          "container": "/etc/localtime",
          "bind": "/etc/localtime"
        },
        {
          "container": "/etc/timezone",
          "bind": "/etc/timezone"
        },
        {
          "container": "/var/www/html"
        }
      ]
    }
  ]
}
